{
  "name": "zmok",
  "version": "1.4.0",
  "description": "A simple 3D renderer focused on bringing 3D features to Photoshop mockups.",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "cross-env NODE_ENV=dev electron .",
    "pack": "electron-builder --dir",
    "dist32_64": "electron-builder --ia32 --x64 -w",
    "distW": "electron-builder --x64 -w",
    "dist": "electron-builder",
    "distM": "electron-builder --publish never"
  },
  "author": "MARTYR X LTD",
  "license": "MIT",
  "devDependencies": {
    "@electron/notarize": "^3.0.1",
    "cross-env": "^7.0.3",
    "electron": "^36.2.1",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "@webtoon/psd": "^0.4.0",
    "chokidar": "^4.0.3",
    "sharp": "^0.34.2",
    "three": "^0.176.0",
    "toml": "^3.0.0"
  },
  "optionalDependencies": {
    "@img/sharp-darwin-arm64": "^0.34.2",
    "@img/sharp-darwin-x64": "^0.34.2",
    "node-mac-permissions": "^2.5.0"
  },
  "build": {
    "appId": "com.martyr.ZMOK",
    "productName": "ZMOK",
    "win": {
      "target": "nsis",
      "files": [
        "**/*",
        "!node_modules/sharp/vendor/",
        "!TODO",
        "!vscode.code-workspace",
        "!tools/",
        "!assets/",
        "!dist/",
        "!*.md"
      ],
      "fileAssociations": {
        "ext": "zmok",
        "description": "ZMOK 3D Mockup File",
        "icon": "zmok.ico"
      }
    },
    "mac": {
      "target": {
        "target": "default",
        "arch": "universal"
      },
      "fileAssociations": {
        "ext": "zmok",
        "description": "ZMOK 3D Mockup File",
        "role": "Viewer",
        "icon": "zmok.icns"
      },
      "mergeASARs": false,
      "notarize": true,
      "category": "public.app-category.graphics-design",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "files": [
        "**/*",
        "!TODO",
        "!vscode.code-workspace",
        "!tools/",
        "!assets/",
        "!dist/",
        "!*.md"
      ]
    },
    "onNodeModuleFile": "./tools/include-examples-three.js",
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "uninstallDisplayName": "ZMOK ${version}"
    },
    "artifactName": "ZMOK_${version}_Setup.${ext}",
    "forceCodeSigning": false,
    "afterPack": "./tools/removeLocales.js",
    "extraResources": [
      "photoshop_scripts"
    ]
  }
}
